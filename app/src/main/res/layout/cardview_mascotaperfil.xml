<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMascotaPerfil"
    android:layout_width="@dimen/layout_cardperfil"
    android:layout_height="@dimen/layout_cardperfil"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:elevation="@dimen/cardview_default_elevation"
    card_view:cardBackgroundColor="@color/primary_light"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    card_view:cardElevation="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="@dimen/layout_cardperfil"
        android:layout_height="@dimen/layout_cardperfil"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="@dimen/fotocardperfil"
            android:layout_height="@dimen/fotocardperfil"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/elevation_actionbar"
            tools:ignore="ContentDescription,InefficientWeight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLikeCountCVPerfil"
                android:layout_width="@dimen/imgLikeCountCVperfil"
                android:layout_height="@dimen/imgLikeCountCVperfil"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/hueso_amarillo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvLikeCountCVPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/imgLikeCountCVPerfil"
                android:textSize="@dimen/descri_mascota"
                tools:ignore="RelativeOverlap,RtlHardcoded"
                android:layout_toStartOf="@id/imgLikeCountCVPerfil"/>

        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView >